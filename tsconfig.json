{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express", "pg", "jsonwebtoken", "cors", "morgan", "multer", "swagger-jsdoc", "swagger-ui-express", "bcryptjs"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
